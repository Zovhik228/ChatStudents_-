<UserControl x:Class="ChatStudents_Пешков.Pages.Items.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatStudents_Пешков.Pages.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,18,0,10" >
        <Image x:Name="imgUser" Margin="10,17,0,15" Width="35" HorizontalAlignment="Left" Source="/Images/ic-user.png">
            <Image.Clip>
                <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0, 0, 30, 30"/>
            </Image.Clip>
        </Image>
        <Image x:Name="Status" Width="10" Height="10" Margin="30, 30, 0, 0" HorizontalAlignment="Left" Source="/Images/ic-online.png" Visibility="Visible"/>
        <Label x:Name="FIO" Content="Иванов Иван Иванович" Margin="45, 0, 0, 0" VerticalAlignment="Top" FontWeight="Bold" FontSize="10"/>
        <Label x:Name="tbLastMessage" Content="..." Margin="52,42,0,0" VerticalAlignment="Top" FontSize="10" Height="21"/>
    </Grid>
</UserControl>